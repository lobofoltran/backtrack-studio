<div class="right">
    <div class="top">
        <button id="menu-btn">
            <span class="material-icons-sharp">menu</span>
        </button>
        <div class="theme-toggler">
            <span class="material-icons-sharp active">light_mode</span>
            <span class="material-icons-sharp">dark_mode</span>
        </div>
        <div class="profile">
            <div class="info">
                <p>Olá, <b>{{session.nome}}</b></p>
                {% if session.cargo == 0 %}
                <small class="text-muted">Administrador</small>
                {% else %}
                <small class="text-muted">Administrador</small>
                {% endif %}
            </div>
            <div class="profile-photo">
                <img src="/assets/img/profile-{{session.id}}.jpg" alt="">
            </div>
        </div>
    </div>
    <div class="recent-updates">
        <h2>Últimas Atualizações</h2>
        <div class="updates">
            {% for r in registros %}
            <div class="update">
                <div class="profile-photo">
                    <img src="/assets/img/profile-{{r.id_registro_admin}}.jpg" alt="">
                </div>
                <div class="message">
                    <p><b>{{r.nome}}</b> {{r.acao_registro}}</p>
                    {% if r.id_registro == id_registro1 %}
                    <small class="text-muted">{{data1}}</small>
                    {% elseif r.id_registro == id_registro2 %}
                    <small class="text-muted">{{data2}}</small>
                    {% else %}
                    <small class="text-muted">{{data3}}</small>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    <div class="sales-analytics">
        <h2>Análise de Agendamentos</h2>
        <div class="item online">
            <div class="icon">
                <span class="material-icons-sharp">savings</span>
            </div>
            <div class="right">
                <div class="info">
                    <h3>GANHOS</h3>
                    <small class="text-muted">Desde o início</small>
                </div>
                <h5 class="success"></h5>
                <h3>R$ {{ganhosMes}},00</h3>
            </div>
        </div>
        <div class="item offline">
            <div class="icon">
                <span class="material-icons-sharp">event_note</span>
            </div>
            <div class="right">
                <div class="info">
                    <h3>AGENDAMENTOS</h3>
                    <small class="text-muted">Desde o início</small>
                </div>
                <h5 class="danger"></h5>
                <h3>{{agendamentosMes}}</h3>
            </div>
        </div>
        <div class="item customers">
            <div class="icon">
                <span class="material-icons-sharp">person</span>
            </div>
            <div class="right">
                <div class="info">
                    <h3>NOVOS CLIENTES</h3>
                    <small class="text-muted">Desde o início</small>
                </div>
                <h5 class="success"></h5>
                <h3>{{clientesMes}}</h3>
            </div>
        </div>
        <div class="item add-product" onclick="window.location='/agendamento/form?op=inclui'">
            <div>
                <span class="material-icons-sharp">add</span>
                <h3>Novo Agendamento</h3>
            </div>
        </div>
    </div>
</div>
